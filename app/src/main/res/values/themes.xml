<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diploma" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#666FE8</item>
        <item name="colorPrimaryVariant">#666FE8</item>
        <item name="colorOnPrimary">#F8F2FF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0AB938</item>
        <item name="colorSecondaryVariant">#666FE8</item>
        <item name="colorOnSecondary">#F8F2FF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#666FE8</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Diploma.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Diploma.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Diploma.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>