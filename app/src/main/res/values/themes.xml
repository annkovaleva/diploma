<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diploma" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#111111</item>
        <item name="colorPrimaryVariant">#111111</item>
        <item name="colorOnPrimary">#DAEFE3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9D0019</item>
        <item name="colorSecondaryVariant">#222222</item>
        <item name="colorOnSecondary">#DAEFE3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#111111</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Diploma.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Diploma.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Diploma.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>